CC = g++
AR = ar rc
RM = rm
TOP_DIR= /home/skg/gfs
SRC_DIR = $(TOP_DIR)/rev
OBJ_DIR = $(SRC_DIR)/obj
INCLUDE_DIRS = -I$(SRC_DIR)
SRCS := $(wildcard *.cc)
OBJS := $(patsubst %.cc, $(OBJ_DIR)/%.o, $(SRCS))

CXXFLAGS += -g -std=c++11 -Wall -DSKG_EDGE_DATA_COLUMN_STOAGE -DSKG_PROPERTIES_SUPPORT_NULL -D_FILE_OFFSET_BITS=64 -DDB_ADAPTER -DSKG_DISABLE_COMPRESSION -DSKG_PREPROCESS_DYNAMIC_EDGE -DUSE_STL_PRIORITY_QUEUE -DSKG_SUPPORT_THREAD_LOCAL -DSKG_QUERY_USE_MT -DSKG_REQ_VAR_PROP -DROCKSDB_USING_THREAD_STATUS

all: $(OBJS)
.PHONY: all

$(OBJ_DIR)/%.o : %.cc 
	$(CC) $(CXXFLAGS) $(INCLUDE_DIRS) -c $< -o $@
